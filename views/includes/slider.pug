#mySlider(data-ride="carousel").carousel.slide
      ol.carousel-indicators
        li( data-target="mySlide" data-slide-to="0").active
        li( data-target="mySlide" data-slide-to="1")
        li( data-target="mySlide" data-slide-to="2")
      .carousel-inner.carousel-item.active
        img(src="/img/slider1.jpg" alt="").d-block.img-fluid
      .carousel-item
        img(src="/img/slider2.jpg" alt="").d-block.img-fluid
  
      .carousel-item
        img(src="/img/slider3.jpg" alt="").d-block.img-fluid
      a.carousel-control-prev(href="#mySlider" data-slide="prev")
        span.carousel-control-prev-icon
      a.carousel-control-next(href="#mySlider" data-slide="next")
        span.carousel-control-next-icon