extends ../layouts/main-layout.pug
block styles 
  link(rel="stylesheet", href="/public/css/forms.css")
block content
  form(action="/admin/add-product" method="POST")
    .form-group.row.mb-3
      label(for="name").col-sm-2.col-form-label Product Name
      .col-sm-10
        input(type="text" name="name").form-control

    .form-group.row.mb-3
      label(for="price").col-sm-2.col-form-label Price
      .col-sm-10
        input(type="text" name="price").form-control

    .form-group.row.mb-3
      label(for="imageurl").col-sm-2.col-form-label Image
      .col-sm-10
        input(type="text" name="imageurl").form-control
    
    .form-group.row.mb-3
      label(for="categoryid").col-sm-2.col-form-label Category
      .col-sm-10
        select(type="text" name="categoryid").form-control#categoryid
          option(value='-1') Select Category
          each category in categories
            option(value=`${category.id}`) #{category.name}
        
    .form-group.row.mb-3
      label(for="description").col-sm-2.col-form-label Description
      .col-sm-10
        textarea(name="description",cols = "30", rows="10").form-control

    .form-group.row.mb-3
      .col-sm-10.offset-sm-2
        input(type="submit" name="saveProduct").btn.btn-primary 