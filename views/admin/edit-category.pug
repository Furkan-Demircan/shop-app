extends ../layouts/main-layout.pug
block styles 
  link(rel="stylesheet", href="/public/css/forms.css")
block content
  form(action="/admin/categories" method="POST")

    input(type="hidden" name="id" value=`${category.id}`)
    .form-group.row.mb-3
      label(for="name").col-sm-2.col-form-label Category Name
      .col-sm-10
        input(type="text" name="name" value=`${category.name}`).form-control

    .form-group.row.mb-3
      label(for="description").col-sm-2.col-form-label Description
      .col-sm-10
        textarea(name="description",cols = "30", rows="10" ).form-control #{category.description}

    .form-group.row.mb-3
      .col-sm-10.offset-sm-2
        input(type="submit" name="saveCategory").btn.btn-primary 